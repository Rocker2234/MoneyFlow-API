meta {
  name: Refresh Token
  type: http
  seq: 6
}

post {
  url: {{baseurl}}/user/token/refresh/
  body: json
  auth: none
}

body:json {
  {
    "refresh": "{{jwt_refresh}}"
  }
}

script:post-response {
  if (res.getStatus() === 200) {
    const data = res.getBody();
    
  
    if (data.access) {
      bru.setEnvVar("jwt_access", data.access);
      console.log("Access token updated successfully!");
    }
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
