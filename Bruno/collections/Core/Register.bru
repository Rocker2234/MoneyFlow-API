}

script:post-response {
  if (res.getStatus() === 200) {
    const data = res.getBody();
    bru.setGlobalEnvVar("jwt_access", data.access);
    bru.setGlobalEnvVar("jwt_refresh", data.refresh);
    console.log("Access token updated successfully!");
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
