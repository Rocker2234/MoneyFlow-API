meta {
  name: Register
  type: http
  seq: 3
}

post {
  url: {{baseurl}}/register/
  body: json
  auth: none
}

body:json {
  {
    "username": "rocker",
    "password": "1234",
    "home_currency": "INR"
  }
  // {
  //   "username":"thundra",
